<div
  {{on "mouseup" (fn this.midiController.stopNote this.noteInfo ) }}
  {{on "mouseout" (fn this.midiController.stopNote this.noteInfo ) }}
  {{on "mousedown" (fn this.midiController.playNote this.noteInfo ) }}
  {{on "touchend" (fn this.midiController.stopNote this.noteInfo ) }}
  {{on "touchmove" (fn this.midiController.stopNote this.noteInfo ) }}
  {{on "touchstart" (fn this.midiController.playNote this.noteInfo ) }}

  class= {{if this.notePressed "bg-blue-500"}}
  ...attributes>
  <div class="label">
    <b>{{@hotkey}}</b>
    <br>
    <br>{{@note}}<span>{{@octave}}</span>
  </div>
</div>