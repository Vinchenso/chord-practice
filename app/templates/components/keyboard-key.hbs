<div
  {{on "mouseup" (fn this.midiController.stopNote @info ) }}
  {{on "mouseout" (fn this.midiController.stopNote @info ) }}

  {{on "mousedown" (fn this.midiController.playNote @info ) }}

  {{on "touchend" (fn this.midiController.stopNote @info ) }}
  {{on "touchmove" (fn this.midiController.stopNote @info ) }}

  {{on "touchstart" (fn this.midiController.playNote @info ) }}

  class= "{{if @pressed 'bg-blue-500'}}"
   ...attributes>
  <div class="label"><b>{{@hotkey}}</b>
      <br>
      <br>{{@note}}<span name="OCTAVE_LABEL" value="-1">{{@octave}}</span></div>
  </div>